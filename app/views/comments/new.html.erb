<h2>Add Comment</h2>
<%= form_with url: blog_comments_path(@blog.id), method: :post, local: true do |f|  %>
  <%= f.label :comment_text %>:
  <%= f.text_field :comment_text %>
  <%= f.hidden_field :user_id, :value => current_user.id %>
  <%= f.hidden_field :blog_id, :value => @blog.id %>
  <%= f.submit %>
<% end %>
